<div class="jumbotron well">
    <div class="container">
        <div class="row center well" id="well">
            <h4 style="color: #fff">About
                <%= @user.name %></h4>
        </div>
        <hr class="separator">
        <%= simple_format(@user.aboutfounder) %>
    </div>
    <div class="clearfix"></div>
    <br><br>
    <div class="container">
        <div class="row center well" id="well">
            <h4 style="color: #fff">Business</h4>
        </div>
        <hr class="separator">
        <%= simple_format(@user.aboutbusiness) %>
    </div>

    <% if logged_in? && (current_user == @user) %>
    <div class="article-actions">
        <%= link_to "Edit this article", edit_user_path(@user), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this article", user_path(@user), method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
    </div>
    <% end %>

</div>
