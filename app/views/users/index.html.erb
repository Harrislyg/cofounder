<h1 align="center">All Founders</h1>
<% @users.each do |user| %>
<ul class="listing">
    <div align="center" class="col-md-4">
        <div class="well innerdiv">

            <li class="article-title">
              <%= link_to gravatar_for(user), user_path(user) %>
            </li>

            <li class="article-title">
                <%= link_to user.name, user_path(user) %>
            </li>
            <div class="article-body">
                <%= truncate(user.aboutbusiness, length: 100) %>
                <div class="article-meta-details">
                    <small>Created at:
                        <%= time_ago_in_words(user.created_at) %>
                        ago, last updated:
                        <%= time_ago_in_words(user.updated_at) %>
                        ago</small>
                </div>

            </div>
            <% if user.categories.any? %>
            <p>Categories:
                <%= render user.categories %></p>
            <% end %>
            <li class="article-title">

                <% if logged_in? and current_user.admin? %>
                <%= link_to "Edit this user", edit_user_path(user), class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete the user?"}, class: "btn btn-xs btn-danger" %>
                <% end %>

            </li>
            
        </div>
    </div>
</ul>
<% end %>
